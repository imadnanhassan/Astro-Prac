---
import Button from "./shared/Button.astro";
---

<section class="hero">
  <!-- Load dotlottie-player only once -->
  <script
    src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs"
    type="module"
  ></script>

  <!-- Background Lottie layers -->
  <dotlottie-player
    src="https://lottie.host/e40328b2-ad68-4d04-beca-7147b7536dfd/gmvXbOAfij.lottie"
    background="transparent"
    speed="1"
    style="position: absolute; bottom: 0; height: 100vh; z-index: 0;"
    loop
    autoplay
  ></dotlottie-player>

  <dotlottie-player
    src="https://lottie.host/e68f35be-7a8d-4682-ab46-46d4812f87ed/CucyMkCQjB.lottie"
    background="transparent"
    speed="1"
    style="position: absolute; bottom: 0; height: 60vh; z-index: 2;"
    loop
    autoplay
  ></dotlottie-player>

  <!-- Hero content -->
  <div class="hero-content">
    <h1>Engineered for speed, managed for you</h1>
    <p>Fully-managed real-time database for Amazon and Google clouds</p>
  </div>

  <Button>Join the preview</Button>
</section>

<style>
.hero {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120px;
  text-align: center;
  overflow: hidden;
  background: linear-gradient(to bottom, var(--color-black), var(--color-secondary));
}

.hero-content {
  position: relative;
  z-index: 1;
  max-width: 625px;
  margin: 0 auto 20px;
  display: flex;
  flex-direction: column;
  gap: 24px;
  align-items: center;
  color: var(--color-white);
  line-height: 1;
}

.hero p {
  color: var(--color-subtle-text);
}
</style>
