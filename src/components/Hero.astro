---
import Button from "./shared/Button.astro";
---

<section class="hero">
  <div id="circles-bg" class="lottie-bg" aria-hidden="true"></div>

  <div class="hero-content">
    <h1>Engineered for speed, managed for you</h1>
    <p>Fully-managed real-time database for Amazon and Google clouds</p>
  </div>

  <Button>Join the preview</Button>
  <script
    src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs"
    type="module"></script>
  <dotlottie-player
    src="https://lottie.host/e68f35be-7a8d-4682-ab46-46d4812f87ed/CucyMkCQjB.lottie"
    background="transparent"
    speed="1"
    style={{ height: "520px", zIndex: "2" }}
    loop
    autoplay></dotlottie-player>
  <script
    src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs"
    type="module"></script>
  <dotlottie-player
    src="https://lottie.host/e40328b2-ad68-4d04-beca-7147b7536dfd/gmvXbOAfij.lottie"
    background="transparent"
    speed="1"
    style={{
      width: "150rem",
      height: "150rem",
      position: "absolute",
      top: "50%",
      left: "50%",
      transform: "translate(-50%, -50%)",
    }}
    loop
    autoplay></dotlottie-player>
