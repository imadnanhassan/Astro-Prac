---
import CloudNavbar from "../shared/CloudNavbar.astro";
import Container from "../shared/Container.astro";
import SectionName from "../shared/SectionName.astro";
import SectionHeading from "../shared/SectionHeading.astro";
import FoundationCard from "../sections-specific/strong-foundations/FoundationCard.astro";
---

<Container>
  <section>
    <div class="texts">
      <SectionName>Pricing</SectionName>
      <SectionHeading
        >Transparent Pricing that doesn't tax your growth</SectionHeading
      >
    </div>
  </section>
</Container>
<style>
  section {
    padding: 60px 0 0 0;
  }

  .texts {
    display: flex;
    flex-direction: column;
    gap: 20px;
    text-align: center;
    margin-top: 160px;
  }

  .cards {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 16px;
    margin-top: 100px;
    margin-left: auto;
    margin-right: auto;
  }
  @media (max-width: 768px) {
    .cards {
      grid-template-columns: 1fr;
    }
  }
</style>
